@model MvcMovie.Models.Movie;
@{
    Movie[] movies = (Movie[])ViewData["movies"];
}
<table class="table table-striped table-hover">
    @for (int i = 0; i < movies.Length; i++)
    {
        <tr>
            <td><a href="/helloworld/detail/@movies[i].Id">@movies[i].Title</a></td>
            <td>@movies[i].Price</td>
        </tr>
    }
</table>
<div class="col-lg-12">
    <div class="trending-ads-slide">
        @for (int i = 0; i < movies.Length; i++)
        {
            <div class="col-sm-12 col-lg-14">"
                <!-- product card -->
            <div class="product-item bg-light">
                    <div class="card">
                        <div class="thumb-content">
                            <!-- <div class="price">$200</div> -->
                        <a href="single.html">
                                <img class="card-img-top img-fluid" src="~/images/products/products-3.jpg"
                                alt="Card image cap">
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="/helloworld/detail/@movies[i].Id">@movies[i].Title</a></h4>
                            <ul class="list-inline product-meta">
                                <li class="list-inline-item">
                                    <a href="/helloworld/detail/@movies[i].Id"><i
                                        class="fa fa-folder-open-o"></i>@movies[i].Genre</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/helloworld/detail/@movies[i].Id">@movies[i].ReleaseDate</a>
                                </li>
                            </ul>
                            <a href="/helloworld/detail/@movies[i].Id">@movies[i].Price</a>
                            <div class="product-ratings">
                                <ul class="list-inline">
                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>